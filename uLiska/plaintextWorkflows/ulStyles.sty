% style sheet with additional elements for ulPlainTextWorkflows.tex
\NeedsTeXFormat{LaTeX2e} 
\ProvidesPackage{ulStyles}

\RequirePackage{listings}
% Format listings with typewriter font by default
\lstset{frame=single}

% Define listing style for colored diffs
\definecolor{diffstart}{named}{gray}
\definecolor{diffincl}{named}{green}
\definecolor{diffrem}{named}{red}
\lstdefinelanguage{diff}{
    basicstyle=\ttfamily\small,
    morecomment=[f][\color{diffstart}]{@@},
    morecomment=[f][\color{diffincl}]{+\ },
    morecomment=[f][\color{diffrem}]{-\ },
}
